<section class="all">
  <div class="container-fluid padding">
    <h1><%= @list.name %></h1>
      <%= form_for [@list, @item], :url => user_list_items_path(user_id: @list.user_id, list_id: @list.id) do |f| %>
      <%= f.text_field :description, :class => "enter_new_item", :placeholder =>
      (@item.errors.full_messages_for(:description).first || "enter a new item...") %>
      <%= f.submit :style => "display: none", data: { disable_with: false } %>
    <% end %>
  </div>
  <section class="main">
    <!-- <input class="toggle" type="checkbox"> -->
    <div class="all-items-inlist">
      <%= render :collection => @list.items, :partial => "items/item_li", :as => :item %>
    </div>
  </section>
<hr>
</section>

<div class="col">
<%@tags.each do |t| %>
  <label for="tag_id_<%=t.id%>" >◙ <%= t.name %> </label>
<%end %>
<br><br>

Enter a new Tag for this List:
<br><br>
  <%= form_for @tag, :url => user_list_tags_path(user_id: @list.user_id, list_id: @list.id) do |f| %>
  <%= f.text_field :name %>
    <%= button_tag :class => "btn btn-primary btn-sm" do %>
    <%= f.submit "Create Tag", :class => "ignore"%>
    <% end %>
<% end %>
</div>
