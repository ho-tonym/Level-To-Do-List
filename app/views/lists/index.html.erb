<section class="all">
  <div class="container-fluid padding">
    <h1>Your Lists</h1>
    <%= form_for(@list) do |f| %>
      <%= f.text_field :name, :class => "enter_new_item", :placeholder =>
      (@list.errors.full_messages_for(:name).first || "enter a new list") %>
      <%= f.submit :style => "display: none" %>
    <% end %>
  </form>
  </div>
  <section class="main">
    <ul class="all-items-inlist">
      <% @lists.each do |list| %>
      <li>
        <div class="nav-link">
          <label><%= link_to list.name, list_path(list) %></label>
        </div>
      </li>
      <% end %>
    </ul>
  </section>
</section>
<hr>

<br>
<div class="text-center">
  <button type="button" class="btn btn-primary btn-lg">Save Changes</button>
</div>
