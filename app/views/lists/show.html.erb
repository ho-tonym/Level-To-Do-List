<br><br>
  <%= form_for @tag, :url => user_list_tags_path(user_id: @list.user_id, list_id: @list.id) do |f| %>
  <%= f.text_field :name %>
    <%= button_tag :class => "btn btn-primary btn-sm" do %>
    <%= f.submit "Create Tag", :class => "no_style"%>
    <% end %>
<% end %>
</div>
