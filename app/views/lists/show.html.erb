<div class="container-fluid padding">
  <h1 class="pt-5 pb-3"><%= @list.name %></h1>
    <%= form_for [@list, @item], :url => user_list_items_path(user_id: @list.user_id, list_id: @list.id) do |f| %>
    <%= f.text_field :description, :class => "pt-3 pb-3 text-center enter_new_item", :placeholder =>
    (@item.errors.full_messages_for(:description).first || "enter a new item...") %>
    <%= f.submit :style => "display: none", data: { disable_with: false } %>
  <% end %>
</div>

<section class="main text-left">
  <div class="all-items-inlist">
    <%= render :collection => @list.items, :partial => "items/item_li", :as => :item %>
  </div>
</section>

<!-- handlebars template for items -->
  <script id="item-template" type="text/x-handlebars-template">
    <div id="item-text{{id}}">
      <div class="row">
        <label class="col">{{description}}</label>
          <form class="destroy_button" action="/users/<%=@list.user_id%>/lists/<%=@list.id%>/items/{{id}}" accept-charset="UTF-8" method="post">
            <input name="utf8" type="hidden" value="âœ“">
            <input type="hidden" name="_method" value="delete">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <button type="submit" class="x-destroy">X</button>
          </form>
        </div>
    </div>
  </script>
</div>
