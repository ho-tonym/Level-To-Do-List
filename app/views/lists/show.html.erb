<!-- handlebars template for items -->
<script id="item-template" type="text/x-handlebars-template">
<div class="item-text" id="item-text{{id}}">
  <div class="row">
    <label class="col">{{description}}</label>
      <form class="destroy_button" action="/users/<%=@list.user_id%>/lists/<%=@list.id%>/items/{{id}}" accept-charset="UTF-8" method="post">
        <input name="utf8" type="hidden" value="✓">
        <input type="hidden" name="_method" value="delete">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <button type="submit" class="col-destroy">X</button>
      </form>
    </div>
</div>
</script>
